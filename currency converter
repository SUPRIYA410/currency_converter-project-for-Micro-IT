def get_exchange_rate(base_currency, target_currency):
    """
    Fetches the exchange rate between two currencies.
    (This is a simplified example and would typically involve an API call to a real-time data source)
    """
    exchange_rates = {
        "USD": {"INR": 83.50, "EUR": 0.92, "GBP": 0.80},
        "INR": {"USD": 0.012, "EUR": 0.011, "GBP": 0.0096},
        "EUR": {"USD": 1.09, "INR": 91.00, "GBP": 0.87},
        "GBP": {"USD": 1.25, "INR": 104.00, "EUR": 1.15},
    }

    if base_currency in exchange_rates and target_currency in exchange_rates[base_currency]:
        return exchange_rates[base_currency][target_currency]
    else:
        return None

def currency_converter():
    """
    A simple command-line currency converter.
    """
    print("Welcome to the Simple Currency Converter!")
    print("Available currencies: USD, INR, EUR, GBP")

    while True:
        base_currency = input("Enter the base currency (e.g., USD): ").upper()
        if base_currency not in ["USD", "INR", "EUR", "GBP"]:
            print("Invalid base currency. Please choose from the available currencies.")
            continue

        target_currency = input("Enter the target currency (e.g., EUR): ").upper()
        if target_currency not in ["USD", "INR", "EUR", "GBP"]:
            print("Invalid target currency. Please choose from the available currencies.")
            continue

        try:
            amount = float(input("Enter the amount to convert: "))
            if amount < 0:
                print("Amount cannot be negative.")
                continue
        except ValueError:
            print("Invalid amount. Please enter a number.")
            continue

        exchange_rate = get_exchange_rate(base_currency, target_currency)

        if exchange_rate is not None:
            converted_amount = amount * exchange_rate
            print(f"{amount:.2f} {base_currency} is equal to {converted_amount:.2f} {target_currency}")
        else:
            print("Exchange rate not available for the selected currencies.")

        another_conversion = input("Do you want to perform another conversion? (yes/no): ").lower()
        if another_conversion != "yes":
            print("Thank you for using the currency converter!")
            break

if __name__ == "__main__":
    currency_converter()
